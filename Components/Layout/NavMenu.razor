            </div>

            <AuthorizeView Roles="Developer,Principal,Admin">
                <Authorized>
                    <div class="nav-item">
                        <NavLink class="nav-link" href="reports">
                            <i class="fa fa-chart-bar me-2"></i>Reports
                        </NavLink>
                    </div>
                </Authorized>
            </AuthorizeView>

            <AuthorizeView Roles="Developer,Principal,Admin,Teacher">
                <Authorized>
                    <div class="nav-item">
                        <NavLink class="nav-link" href="archive">
                            <i class="fa fa-archive me-2"></i>Archive
                        </NavLink>
                    </div>
                </Authorized>
            </AuthorizeView>

            
        </nav>
    </div>

}
else
{
    <div class="nav-scrollable" style="opacity: 0.3; pointer-events: none;">
        <nav class="nav flex-column">
            <div class="nav-item">
                <div class="nav-link disabled">
                    <i class="fa fa-home me-2"></i>Home
