    private void SaveVideo()
    {
        videoErrorMessage = string.Empty;

        if (string.IsNullOrWhiteSpace(newVideoUrl))
        {
            videoErrorMessage = "Please enter a YouTube URL.";
            return;
        }

        if (!Util.IsValidYouTubeUrl(newVideoUrl))
        {
            videoErrorMessage = "Please enter a valid YouTube URL.";
            return;
        }

        classSession.VideoUrl = newVideoUrl;
        classSession.VideoTitle = string.IsNullOrWhiteSpace(newVideoTitle) ? "Video Lesson" : newVideoTitle;
        SchoolDataService.UpdateClassSession(classSession);

        showVideoForm = false;
    }

