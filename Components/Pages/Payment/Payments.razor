@page "/payments"
@using FcmsPortalUI.Services
@using FcmsPortal.Models
@using FcmsPortal.Enums
@using FcmsPortal.Constants
@using FcmsPortal
@using System.Globalization
@using FcmsPortalUI.Components.Pages.Shared
@inject ISchoolDataService SchoolDataService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Payment Summary</PageTitle>

<div class="container-fluid mt-3">
    <h2 class="mb-4">School Payments Summary</h2>

    <div class="card mb-4 bg-light">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fa fa-calendar-alt me-2"></i>Current Academic Period</h5>
                    <p class="mb-0">
                        <strong>Academic Year:</strong> @currentPeriod.AcademicYearStart.Year - @(currentPeriod.AcademicYearStart.Year + 1)<br />
                        <strong>Term:</strong> @currentPeriod.Semester.ToTermDisplay()
                    </p>
                </div>
                <div class="col-md-6 text-end">
                    <small class="text-muted">
                        <i class="fa fa-info-circle me-1"></i>
                        This page shows real-time payment data for the current academic period.<br />
                        For historical data, visit <a href="/archive">Payment Archives</a>
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h4>Basic Information</h4>
        </div>

        <div class="card-body">

            <!-- ROW 1 -->
            <div class="row g-3 mb-3">

                <!-- Expected Revenue -->
                <div class="col-md-4">
                    <div class="card border shadow-sm p-3 h-100">
                        <div class="d-flex align-items-center gap-3">
                            <i class="fa fa-money-bill-wave text-primary fs-3"></i>
                            <div>
                                <p class="kpi-title">Total Expected Revenue</p>
                                <p class="kpi-value">
                                    @totalExpectedRevenue.ToString("C", new CultureInfo("en-NG"))
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Amount Received -->
                <div class="col-md-4">
                    <div class="card border shadow-sm p-3 h-100">
                        <div class="d-flex align-items-center gap-3">
                            <i class="fa fa-coins text-success fs-3"></i>
                            <div>
                                <p class="kpi-title">Total Amount Received</p>
                                <p class="kpi-value text-success">
                                    @totalAmountReceived.ToString("C", new CultureInfo("en-NG"))
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Outstanding Balance -->
                <div class="col-md-4">
                    <div class="card border shadow-sm p-3 h-100">
                        <div class="d-flex align-items-center gap-3">
                            <i class="fa fa-wallet text-danger fs-3"></i>
                            <div>
                                <p class="kpi-title">Outstanding Balance</p>
                                <p class="kpi-value text-danger">
                                    @totalOutstandingBalance.ToString("C", new CultureInfo("en-NG"))
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <!-- ROW 2 -->
            <div class="row g-3 mb-3">

                <!-- Payment Completion Rate -->
                <div class="col-md-6">
                    <div class="card border shadow-sm p-3 h-100">
                        <p class="kpi-title mb-1">Payment Completion Rate</p>
                        <div class="progress">
                            <div class="progress-bar bg-info"
                                 style="width:@schoolWidePaymentCompletionRate%">
                            </div>
                        </div>
                        <p class="kpi-bar-value text-info">
                            @schoolWidePaymentCompletionRate.ToString("F2")%
                        </p>
                    </div>
                </div>

                <!-- Timely Completion Rate -->
                <div class="col-md-6">
                    <div class="card border shadow-sm p-3 h-100">
                        <p class="kpi-title mb-1">Timely Completion Rate</p>
                        <div class="progress">
                            <div class="progress-bar bg-warning"
                                 style="width:@schoolWideTimelyCompletionRate%">
                            </div>
                        </div>
                        <p class="kpi-bar-value text-warning">
                            @schoolWideTimelyCompletionRate.ToString("F2")%
                        </p>
                    </div>
                </div>

            </div>

            <!-- ROW 3 -->
            <div class="row g-3 mb-3">

                <!-- Learning Paths -->
                <div class="col-md-3">
                    <div class="card border shadow-sm p-3 h-100">
                        <div class="d-flex align-items-center gap-3">
                            <i class="fa fa-layer-group text-primary fs-3"></i>
                            <div>
                                <p class="kpi-title">Learning Paths</p>
                                <p class="kpi-value">@totalLearningPaths</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Total Students -->
                <div class="col-md-3">
                    <div class="card border shadow-sm p-3 h-100">
                        <div class="d-flex align-items-center gap-3">
                            <i class="fa fa-users text-info fs-3"></i>
                            <div>
                                <p class="kpi-title">Total Students</p>
                                <p class="kpi-value">@totalStudents</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Fully Paid Students -->
                <div class="col-md-3">
                    <div class="card border shadow-sm p-3 h-100">
                        <div class="d-flex align-items-center gap-3">
                            <i class="fa fa-check-circle text-success fs-3"></i>
                            <div>
                                <p class="kpi-title">Fully Paid Students</p>
                                <p class="kpi-value text-success">@fullyPaidStudents</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Students With Balance -->
                <div class="col-md-3">
                    <div class="card border shadow-sm p-3 h-100">
                        <div class="d-flex align-items-center gap-3">
                            <i class="fa fa-exclamation-circle text-warning fs-3"></i>
                            <div>
                                <p class="kpi-title">Students With Balance</p>
                                <p class="kpi-value text-warning">@studentsWithBalance</p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <!-- REPORT BUTTON -->
            <div class="d-flex justify-content-center mt-4">
                <button class="btn btn-primary btn-lg" @onclick="ShowSchoolReport">
                    <i class="fa fa-file-alt me-2"></i> Generate School Report
                </button>
            </div>

        </div>
    </div>


    <div class="card mb-4">
        <div class="card-header">
            <h4>Learning Path Payment Details</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Learning Path</th>
                            <th>Students</th>
                            <th>School Fees</th>
                            <th>Expected Revenue</th>
                            <th>Total Paid</th>
                            <th>Balance</th>
                            <th>Payment Rate</th>
                            <th>Timely Rate</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var learningPath in learningPaths)
                        {
                            var paymentSummary = LogicMethods.CalculateLearningPathPaymentSummary(learningPath);

                            <tr>
                                <td>
                                    <a href="/learningpaths/details/@learningPath.Id">
                                        @learningPath.EducationLevel - @learningPath.ClassLevel
                                    </a>
                                </td>
                                <td>@paymentSummary.StudentCount</td>
                                <td>@paymentSummary.FeePerSemester.ToString("C", new CultureInfo("en-NG"))</td>
                                <td>@paymentSummary.ExpectedRevenue.ToString("C", new CultureInfo("en-NG"))</td>
                                <td>@paymentSummary.TotalPaid.ToString("C", new CultureInfo("en-NG"))</td>
                                <td>@paymentSummary.Outstanding.ToString("C", new CultureInfo("en-NG"))</td>
                                <td>@paymentSummary.PaymentCompletionRate.ToString("F2")%</td>
                                <td>@paymentSummary.TimelyCompletionRate.ToString("F2")%</td>
                                <td>
                                    <button class="btn btn-sm btn-info" @onclick="() => ShowLearningPathReport(learningPath)">
                                        <i class="fa fa-file-alt"></i> Report
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<SchoolPaymentReportModal IsVisible="showSchoolReport"
                          LearningPaths="learningPaths"
                          Students="learningPaths.SelectMany(lp => lp.Students).ToList()"
                          AcademicYear="currentPeriod?.AcademicYear ?? string.Empty"
                          Semester="currentPeriod?.Semester ?? Semester.First"
                          OnClose="CloseSchoolReport"
                          SchoolName="@school.Name" />

<LearningPathPaymentReportModal IsVisible="showLearningPathReport"
LearningPath="selectedLearningPath"
OnClose="CloseLearningPathReport" />

@code {
    private School school = new School();
    private LearningPath? selectedLearningPath = null;
    private List<LearningPath> learningPaths = new();
    private AcademicPeriod? currentPeriod;
    private int totalLearningPaths = 0;
    private int totalStudents = 0;
    private int fullyPaidStudents = 0;
    private int studentsWithBalance = 0;
    private double totalExpectedRevenue = 0;
    private double totalAmountReceived = 0;
    private double totalOutstandingBalance = 0;
    private double schoolWidePaymentCompletionRate = 0;
    private double schoolWideTimelyCompletionRate = 0;
    private bool showSchoolReport = false;
    private bool showLearningPathReport = false;

    protected override void OnInitialized()
    {
        school = SchoolDataService.GetSchoolBasicInfo();
        currentPeriod = SchoolDataService.GetCurrentAcademicPeriod();
        LoadRealTimeData();
    }

    private void LoadRealTimeData()
    {
        if (currentPeriod != null)
        {
            learningPaths = SchoolDataService.GetLearningPathsForPayments(currentPeriod.AcademicYearStart.Year, currentPeriod.Semester);

            CalculateSummaryData();
        }
    }

    private void CalculateSummaryData()
    {
        var summary = LogicMethods.CalculateSchoolPaymentSummary(learningPaths);

        totalLearningPaths = summary.TotalLearningPaths;
        totalStudents = summary.TotalStudents;
        fullyPaidStudents = summary.FullyPaidStudents;
        studentsWithBalance = summary.StudentsWithBalance;
        totalExpectedRevenue = summary.TotalExpectedRevenue;
        totalAmountReceived = summary.TotalAmountReceived;
        totalOutstandingBalance = summary.TotalOutstanding;
        schoolWidePaymentCompletionRate = summary.PaymentCompletionRate;
        schoolWideTimelyCompletionRate = summary.TimelyCompletionRate;
    }

    private void ShowSchoolReport()
    {
        showSchoolReport = true;
    }

    private void CloseSchoolReport()
    {
        showSchoolReport = false;
    }

    private void ShowLearningPathReport(LearningPath learningPath)
    {
        selectedLearningPath = learningPath;
        showLearningPathReport = true;
    }

    private void CloseLearningPathReport()
    {
        showLearningPathReport = false;
        selectedLearningPath = null;
    }
}