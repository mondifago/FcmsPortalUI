@using FcmsPortal.Models
@using FcmsPortalUI.Services
@using FcmsPortal.Enums
@using FcmsPortal.Constants
@using FcmsPortal
@inject ISchoolDataService SchoolDataService
@inject IPermissionService PermissionService
@inject NavigationManager NavigationManager

<div class="modal fade @(IsVisible ? "show" : "")" style="display: @(IsVisible ? "block" : "none");" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fa fa-graduation-cap"></i> Finalize Grades - @LearningPath?.EducationLevel.ToDisplayName() @LearningPath?.ClassLevel.ToDisplayName()
                </h5>
                <button type="button" class="btn-close" @onclick="Close"></button>
            </div>
            <div class="modal-body">
                @if (LearningPath != null)
                {
                    <h6 class="text-muted mb-3">@LearningPath.AcademicYear @LearningPath.Semester.ToTermDisplay()</h6>

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Student Name</th>
                                    @if (LearningPath.Semester == Semester.Third)
                                    {
                                        <th class="text-center">1st Term</th>
                                        <th class="text-center">2nd Term</th>
                                        <th class="text-center">3rd Term</th>
                                        <th class="text-center bg-info text-white">Promotion Grade</th>
                                    }
                                    else
                                    {
                                        <th class="text-center">Overall Term Grade</th>
                                    }
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in LearningPath.Students.OrderBy(s => s.Person.LastName))
                                {
                                    <tr>
                                        <td>@student.Person.LastName, @student.Person.FirstName</td>
                                        @if (LearningPath.Semester == Semester.Third)
                                        {

                                            var grades = studentSemesterGrades.ContainsKey(student.Id)
                                            ? studentSemesterGrades[student.Id]
                                            : new List<double>();

                                            @for (int i = 0; i < 3; i++)
                                            {
                                                <td class="text-center">
                                                    @if (i < grades.Count)
                                                    {
                                                        <span class="badge bg-@Util.GetGradeColorClass(grades[i])">
                                                            @grades[i].ToString("F1")%
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                            }
                                            <td class="text-center bg-info bg-opacity-10">
                                                <strong>
                                                    @{

                                                        var promotionGrade = grades.Any()
                                                        ? Math.Round(grades.Average(), 2)
                                                        : 0;
                                                    }
                                                    @promotionGrade.ToString("F1")%

                                                </strong>
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="text-center">
                                                <strong class="text-primary">
                                                    @LogicMethods.CalculateSemesterOverallGrade(student, LearningPath).ToString("F1")%
                                                </strong>
                                            </td>
                                        }
                                        <td class="text-center">
                                            <button class="btn btn-sm btn-info me-1"
                                                    @onclick="() => GenerateGradeReport(student)">
                                                <i class="fa fa-file-pdf"></i> Report
                                            </button>

                                            @if (LearningPath.Semester == Semester.Third)
                                            {
                                                    var grades = studentSemesterGrades.ContainsKey(student.Id)
                                                    ? studentSemesterGrades[student.Id]
                                                    : new List<double>();

                                                    var promotionGrade = grades.Any()
                                                    ? Math.Round(grades.Average(), 2)
                                                    : 0;

                                                    bool isLastClass = LogicMethods.IsLastClassInEducationLevel(
                                                    LearningPath.EducationLevel, LearningPath.ClassLevel);

                                                    bool passed = promotionGrade >= FcmsConstants.PASSING_GRADE;
                                                
                                                @if (isGradesFinalized && isLastClass)
                                                {
                                                    <AuthorizeView Roles="Developer,Principal">
                                                        <Authorized>
                                                            <button class="btn btn-sm btn-success"
                                                                    @onclick="() => ProcessStudentPromotion(student)">
                                                                <i class="fa fa-graduation-cap"></i> Graduate
                                                            </button>
                                                        </Authorized>
                                                    </AuthorizeView>
                                                }
                                                @if (isGradesFinalized && !isLastClass && passed)
                                                {
                                                    <AuthorizeView Roles="Developer,Principal">
                                                        <Authorized>
                                                            <button class="btn btn-sm btn-warning"
                                                                    @onclick="() => ProcessStudentPromotion(student)">
                                                                <i class="fa fa-arrow-up"></i> Promote
                                                            </button>
                                                        </Authorized>
                                                    </AuthorizeView>
                                                }
                                                @if (isGradesFinalized && !isLastClass && !passed)
                                                {
                                                    <span class="text-danger small">Failed</span>
                                                }
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p>Loading...</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Close">
                    <i class="fa fa-times"></i> Close
                </button>
                @if (!isGradesFinalized)
                {
                    <AuthorizeView Roles="Developer,Principal">
                        <Authorized>
                            <button type="button" class="btn btn-primary" @onclick="() => showFinalizeConfirm = true">
                                <i class="fa fa-check-circle"></i> Finalize All Grades
                            </button>
                        </Authorized>
                    </AuthorizeView>
                }
            </div>
        </div>
    </div>
</div>

@if (IsVisible)
{
    <div class="modal-backdrop fade show"></div>
}

@if (showFinalizeConfirm)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal show" style="display:block;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5>Finalize All Grades</h5>
                </div>
                <div class="modal-body">
                    <p>
                        Grades will be finalized and can no longer be modified.<br />
                        This action cannot be undone.<br />
                        Are you sure you want to continue?
                    </p>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CancelFinalize">Cancel</button>
                    <button class="btn btn-danger" @onclick="FinalizeAllGrades">Finalize</button>
                </div>

            </div>
        </div>
    </div>
}

<StudentReportCardModal IsVisible="showReportCardModal"
                        Student="selectedStudentForReport"
                        LearningPath="LearningPath"
                        TeacherRemarks="@(teacherRemarks.GetValueOrDefault(selectedStudentForReport?.Id ?? 0, ""))"
                        PrincipalRemarks="@(principalRemarks.GetValueOrDefault(selectedStudentForReport?.Id ?? 0, ""))"
                        TeacherRemarksChanged="@((remarks) => UpdateTeacherRemarks(selectedStudentForReport?.Id ?? 0, remarks))"
                        PrincipalRemarksChanged="@((remarks) => UpdatePrincipalRemarks(selectedStudentForReport?.Id ?? 0, remarks))"
                        OnClose="() => showReportCardModal = false"
                        IsFinalized="isGradesFinalized" />

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public LearningPath LearningPath { get; set; } = new LearningPath();
    [Parameter] public EventCallback OnClose { get; set; }

    private Student? selectedStudentForReport = null;
    private Dictionary<int, string> teacherRemarks = new();
    private Dictionary<int, string> principalRemarks = new();
    private bool showReportCardModal = false;
    private bool showFinalizeConfirm = false;
    private bool isGradesFinalized = false;
    private Dictionary<int, List<double>> studentSemesterGrades = new();

    protected override void OnParametersSet()
    {
        CheckGradesFinalizationStatus();
        if (LearningPath != null && LearningPath.Semester == Semester.Third)
        {
            LoadAllSemesterGrades();
        }
    }

    private void LoadAllSemesterGrades()
    {
        studentSemesterGrades.Clear();

        foreach (var student in LearningPath.Students)
        {
            var grades = SchoolDataService.GetStudentAllSemesterGrades(
                student.Id,
                LearningPath.EducationLevel,
                LearningPath.ClassLevel);

            studentSemesterGrades[student.Id] = grades;
        }
    }


    private void CheckGradesFinalizationStatus()
    {
        if (LearningPath == null)
        {
            isGradesFinalized = false;
            return;
        }

        var reportCards = SchoolDataService.GetStudentReportCardsForLearningPath(LearningPath.Id);

        if (reportCards.Any())
        {
            isGradesFinalized = reportCards.All(rc => rc.IsFinalized);
        }
    }

    private void ShowFinalizeConfirmation()
    {
        showFinalizeConfirm = true;
    }

    private void CancelFinalize()
    {
        showFinalizeConfirm = false;
    }

    private void FinalizeAllGrades()
    {
        showFinalizeConfirm = false;
        SchoolDataService.SaveFinalizedGrades(LearningPath);
        SchoolDataService.ArchiveSchoolPayments();
        SchoolDataService.ArchiveLearningPathPayments(LearningPath);
        SchoolDataService.ArchiveStudentPayments(LearningPath);
        SchoolDataService.ArchiveStudentAttendance(LearningPath);
        var reportCards = SchoolDataService.GetStudentReportCardsForLearningPath(LearningPath.Id);
        foreach (var reportCard in reportCards)
        {
            reportCard.IsFinalized = true;
            reportCard.DateFinalized = DateTime.Now;
            SchoolDataService.SaveStudentReportCard(reportCard);
            SchoolDataService.ArchiveStudentReportCard(reportCard);
        }
        SchoolDataService.ArchiveLearningPathGrades(LearningPath);
        isGradesFinalized = true;
        LoadAllSemesterGrades();
        StateHasChanged();
    }

    private void GenerateGradeReport(Student student)
    {
        selectedStudentForReport = student;

        var reportCard = SchoolDataService.GetStudentReportCard(student.Id, LearningPath.Id);
        if (reportCard != null)
        {
            teacherRemarks[student.Id] = reportCard.TeacherRemarks;
            principalRemarks[student.Id] = reportCard.PrincipalRemarks;
        }
        else
        {
            if (!teacherRemarks.ContainsKey(student.Id))
                teacherRemarks[student.Id] = "";
            if (!principalRemarks.ContainsKey(student.Id))
                principalRemarks[student.Id] = "";
        }

        showReportCardModal = true;
    }

    private void UpdateTeacherRemarks(int studentId, string remarks)
    {
        SchoolDataService.UpdateStudentReportCardRemarks(studentId, LearningPath.Id, teacherRemarks: remarks);
        teacherRemarks[studentId] = remarks;
    }

    private void UpdatePrincipalRemarks(int studentId, string remarks)
    {
        SchoolDataService.UpdateStudentReportCardRemarks(studentId, LearningPath.Id, principalRemarks: remarks);
        principalRemarks[studentId] = remarks;
    }

    private void ProcessStudentPromotion(Student student)
    {
        if (LogicMethods.ShouldArchiveStudent(student.Person.EducationLevel, student.Person.ClassLevel))
        {
            ArchiveStudent(student);
        }
        else
        {
            PromoteStudent(student);
        }
    }

    private void PromoteStudent(Student student)
    {
        var (nextEducationLevel, nextClassLevel) = LogicMethods.GetNextEducationLevelAndClass(
            student.Person.EducationLevel, student.Person.ClassLevel);

        if (nextEducationLevel.HasValue && nextClassLevel.HasValue)
        {
            student.Person.EducationLevel = nextEducationLevel.Value;
            student.Person.ClassLevel = nextClassLevel.Value;
        }
        else
        {
            var nextClass = LogicMethods.GetNextClassLevel(
                student.Person.EducationLevel, student.Person.ClassLevel);

            if (nextClass.HasValue)
            {
                student.Person.ClassLevel = nextClass.Value;
            }
        }

        LearningPath.Students.Remove(student);
        SchoolDataService.UpdateStudent(student);
        StateHasChanged();
    }

    private void ArchiveStudent(Student student)
    {
        LearningPath.Students.Remove(student);
        SchoolDataService.ArchiveStudent(student);
        StateHasChanged();
    }

    private void Close()
    {
        OnClose.InvokeAsync();
    }
}