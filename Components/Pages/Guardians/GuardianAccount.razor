@page "/guardians/account/{GuardianId:int}"
@using FcmsPortal.Models
@using FcmsPortalUI.Services
@inject ISchoolDataService SchoolDataService
@inject IAccountInvitationService AccountInvitationService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager

<h3>Guardian Account Management</h3>

@if (guardian == null)
{
    <div class="alert alert-warning">Guardian not found.</div>
}
else
{
    <div class="card mb-3">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@guardian.Person.FirstName @guardian.Person.LastName</h5>
            <a class="btn btn-secondary btn-sm" href="/guardians">
                <i class="fa fa-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body">
            <p><strong>Email:</strong> @guardian.Person.Email</p>
            <p><strong>Occupation:</strong> @guardian.Occupation</p>
            <p><strong>Relationship:</strong> @guardian.RelationshipToStudent</p>
            <p>
                <strong>Account Registration:</strong>
                @if (guardian.Person.EmailConfirmed)
                {
                    <span class="text-success">Complete</span>
                }
                else
                {
                    <span class="text-danger">Incomplete</span>
                }
            </p>

            <div class="d-flex align-items-center gap-3 mb-3">
                <strong>Account Status:</strong>
                <div class="form-check form-switch mb-0">
                    <input type="checkbox"
                           id="isActive"
                           class="form-check-input"
                           checked="@guardian.Person.IsActive"
                           @onchange="ToggleAccountStatus" />
                    <label class="form-check-label @(guardian.Person.IsActive ? "text-success" : "text-danger")" for="isActive">
                        @(guardian.Person.IsActive ? "Active" : "Inactive")
                    </label>
                </div>
            </div>

            <button class="btn btn-primary" @onclick="SendInvitation" disabled="@sending">
                <i class="fa fa-envelope"></i>
                @(sending ? "Sending..." : "Send Account Invitation")
            </button>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Invitation History</h5>
        </div>
        <div class="card-body p-0">
            @if (invitations == null || !invitations.Any())
            {
                <div class="p-3 text-muted">No invitations sent.</div>
            }
            else
            {
                <table class="table table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Sent</th>
                            <th>Expires</th>
                            <th>Status</th>
                            <th>Used On</th>
                            <th>Sent By</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invite in invitations)
                        {
                            <tr>
                                <td>@invite.CreatedAt.ToLocalTime():g</td>
                                <td>@invite.ExpiryDate.ToLocalTime():g</td>
                                <td>
                                    @if (invite.IsUsed)
                                    {
                                        <span class="badge bg-success">Used</span>
                                    }
                                    else if (invite.ExpiryDate < DateTime.UtcNow)
                                    {
                                        <span class="badge bg-danger">Expired</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                </td>
                                <td>@(invite.IsUsed? invite.ExpiryDate.ToLocalTime().ToString("g") : "-")</td>
                                <td>@invite.SentByAccountId</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
}

@code {
    [Parameter] public int GuardianId { get; set; }

    private Guardian? guardian;
    private List<AccountInvitation>? invitations;
    private bool sending = false;
    private string? message;

    protected override async Task OnInitializedAsync()
    {
        guardian = SchoolDataService.GetGuardianById(GuardianId);

        if (guardian != null)
        {
            invitations = await AccountInvitationService.GetInvitationsForPersonAsync(guardian.PersonId);
        }
    }

    private void ToggleAccountStatus(ChangeEventArgs e)
    {
        if (guardian == null) return;

        var isActive = (bool)(e.Value ?? false);

        if (isActive)
        {
            SchoolDataService.ActivatePerson(guardian.Person);
        }
        else
        {
            SchoolDataService.DeactivatePerson(guardian.Person);
        }

        guardian.Person.IsActive = isActive;
    }

    private async Task SendInvitation()
    {
        if (guardian == null || string.IsNullOrWhiteSpace(guardian.Person.Email))
        {
            message = "Guardian has no valid email address.";
            return;
        }

        sending = true;
        message = string.Empty;

        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            int.TryParse(user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value, out var senderId);

            await AccountInvitationService.CreateInvitationAsync(
                guardian.PersonId,
                guardian.Person.Email,
                "Guardian",
                senderId
            );

            invitations = await AccountInvitationService.GetInvitationsForPersonAsync(guardian.PersonId);
            message = $"Invitation sent to {guardian.Person.Email} at {DateTime.Now:g}.";
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
        }
        finally
        {
            sending = false;
        }
    }
}