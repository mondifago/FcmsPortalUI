@page "/guardians"
@inject GuardianService GuardianService
@inject NavigationManager NavigationManager
@using FcmsPortal.Models
@using FcmsPortalUI.Services
@using FcmsPortalUI.Components.Pages.Shared.DeleteConfirmation
@rendermode InteractiveServer

<PageTitle>Guardians</PageTitle>

<div class="container">
    <h1>Guardians</h1>

    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <a href="/guardians/create" class="btn btn-primary">Add New Guardian</a>
            </div>
            @if (guardians.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Profile Picture</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var guardian in guardians)
                        {
                            <tr>
                                <td>@guardian.Id</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(guardian.Person.ProfilePictureUrl))
                                    {
                                        <img src="@guardian.Person.ProfilePictureUrl" class="rounded-circle" style="width: 30px; height: 30px; object-fit: cover;" alt="Profile" />
                                    }
                                    else
                                    {
                                        <i class="oi oi-person" style="font-size: 1.5rem;"></i>
                                    }
                                </td>
                                <td>@GetFullName(guardian.Person)</td>
                                <td>@guardian.Person.Email</td>
                                <td>@guardian.Person.PhoneNumber</td>
                                <td>@(guardian.Person.IsActive ? "Active" : "Inactive")</td>
                                <td>
                                    <a href="/guardians/details/@guardian.Id" class="btn btn-info btn-sm me-2">View</a>
                                    <a href="/guardians/edit/@guardian.Id" class="btn btn-warning btn-sm me-2">Edit</a>
                                    <button class="btn btn-danger btn-sm" @onclick="() => ShowDeleteConfirm(guardian.Id)">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No guardians found.</p>
            }
        </div>
    </div>

    <ConfirmDeleteModal IsVisible="@showDeleteConfirm" OnConfirm="HandleDeleteConfirm" OnCancel="HandleDeleteCancel" Message="Are you sure you want to delete this guardian?" />
</div>

@code {
    private List<Guardian> guardians = new();
    private bool showDeleteConfirm = false;
    private int guardianIdToDelete;

    protected override void OnInitialized()
    {
        guardians = GuardianService.GetGuardians();
    }

    private void ShowDeleteConfirm(int id)
    {
        guardianIdToDelete = id;
        showDeleteConfirm = true;
    }

    private void HandleDeleteConfirm()
    {
        GuardianService.DeleteGuardian(guardianIdToDelete);
        guardians = GuardianService.GetGuardians();
        showDeleteConfirm = false;
    }

    private void HandleDeleteCancel()
    {
        showDeleteConfirm = false;
    }

    private string GetFullName(Person person)
    {
        return $"{person.FirstName} {(string.IsNullOrEmpty(person.MiddleName) ? "" : person.MiddleName + " ")}{person.LastName}";
    }
}