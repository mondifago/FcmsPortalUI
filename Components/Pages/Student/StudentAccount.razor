@page "/students/account/{StudentId:int}"
@using FcmsPortal.Models
@using FcmsPortalUI.Services
@inject ISchoolDataService SchoolDataService
@inject IAccountInvitationService AccountInvitationService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager

<h3>Student Account Management</h3>

@if (student == null)
{
    <div class="alert alert-warning">Student not found.</div>
}
else
{
    <div class="card mb-3">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@student.Person.FirstName @student.Person.LastName</h5>
            <a class="btn btn-secondary btn-sm" href="/students">
                <i class="fa fa-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body">
            <p><strong>Email:</strong> @student.Person.Email</p>
            <p><strong>Class Level:</strong> @student.Person.ClassLevel</p>
            <p><strong>Education Level:</strong> @student.Person.EducationLevel</p>
            <p><strong>Guardian:</strong> @student.Guardian?.Person?.FirstName @student.Guardian?.Person?.LastName</p>
            <p>
                <strong>Account Status:</strong>
                @(student.Person.EmailConfirmed ? "Confirmed" : "Not Confirmed")
            </p>

            <button class="btn btn-primary" @onclick="SendInvitation" disabled="@sending">
                <i class="fa fa-envelope"></i>
                @(sending ? "Sending..." : "Send Account Invitation")
            </button>

            @if (!string.IsNullOrEmpty(message))
            {
                <div class="alert alert-info mt-3">@message</div>
            }
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Invitation History</h5>
        </div>
        <div class="card-body p-0">
            @if (invitations == null || !invitations.Any())
            {
                <div class="p-3 text-muted">No invitations sent.</div>
            }
            else
            {
                <table class="table table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Sent</th>
                            <th>Expires</th>
                            <th>Status</th>
                            <th>Used On</th>
                            <th>Sent By</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invite in invitations)
                        {
                            <tr>
                                <td>@invite.CreatedAt.ToLocalTime():g</td>
                                <td>@invite.ExpiryDate.ToLocalTime():g</td>
                                <td>
                                    @if (invite.IsUsed)
                                    {
                                        <span class="badge bg-success">Used</span>
                                    }
                                    else if (invite.ExpiryDate < DateTime.UtcNow)
                                    {
                                        <span class="badge bg-danger">Expired</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                </td>
                                <td>@(invite.IsUsed? invite.ExpiryDate.ToLocalTime().ToString("g") : "-")</td>
                                <td>@invite.SentByAccountId</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
}

@code {
    [Parameter] public int StudentId { get; set; }

    private Student? student;
    private List<AccountInvitation>? invitations;
    private bool sending = false;
    private string? message;

    protected override async Task OnInitializedAsync()
    {
        student = SchoolDataService.GetStudentById(StudentId);

        if (student != null)
        {
            invitations = await AccountInvitationService.GetInvitationsForPersonAsync(student.PersonId);
        }
    }

    private async Task SendInvitation()
    {
        if (student == null || string.IsNullOrWhiteSpace(student.Person.Email))
        {
            message = "Student has no valid email address.";
            return;
        }

        sending = true;
        message = string.Empty;

        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            int.TryParse(user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value, out var senderId);

            await AccountInvitationService.CreateInvitationAsync(
                student.PersonId,
                student.Person.Email,
                "Student",
                senderId
            );

            invitations = await AccountInvitationService.GetInvitationsForPersonAsync(student.PersonId);
            message = $"Invitation sent to {student.Person.Email} at {DateTime.Now:g}.";
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
        }
        finally
        {
            sending = false;
        }
    }
}

