@page "/students"
@inject ISchoolDataService SchoolDataService
@inject NavigationManager NavigationManager
@using FcmsPortal
@using FcmsPortal.Models
@using FcmsPortal.Enums
@using FcmsPortalUI.Services
@using FcmsPortalUI.Components.Pages.Shared
@rendermode InteractiveServer

<PageTitle>Students</PageTitle>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Students</h2>
        <AuthorizeView Roles="Developer,Principal,Admin">
            <Authorized>
                <div class="mb-3">
                    <button @onclick="ShowGuardianSelectionModal" class="btn btn-primary">
                        <i class="fa fa-plus"></i> Add New Student
                    </button>
                </div>
            </Authorized>
        </AuthorizeView>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <label for="educationLevel" class="form-label">Education Level:</label>
                    <select class="form-select" id="educationLevel"
                            @bind="selectedEducationLevel"
                            @bind:after="OnEducationLevelFilterChanged">
                        <option value="">Select Education Level</option>
                        @foreach (var level in Enum.GetValues(typeof(EducationLevel)).Cast<EducationLevel>().Where(e => e != EducationLevel.None))
                        {
                            <option value="@level">@level.ToDisplayName()</option>
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="classLevel" class="form-label">Class Level:</label>
                    <select class="form-select" id="classLevel"
                            @bind="selectedClassLevel"
                            @bind:after="FilterStudents">
                        <option value="">Select Class Level</option>
                        @foreach (var level in availableClassLevelsForFilter)
                        {
                            <option value="@level">@level.ToDisplayName()</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>

    @if (students == null)
    {
        <p><em>Loading...</em></p>
    }
    else if (!filtersApplied)
    {
        <div class="alert alert-info">
            <i class="fa fa-info-circle me-2"></i>
            Please select filters to view students.
        </div>
    }
    else if (!visibleStudents.Any())
    {
        <div class="alert alert-warning">
            <i class="fa fa-exclamation-triangle me-2"></i>
            No students found matching the selected filters.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Profile</th>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Education Level</th>
                        <th>Class Level</th>
                        <th>status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in visibleStudents)
                    {
                        <tr>
                            <td>@student.Id</td>
                            <td>
                                <ProfileThumbnailList Person="student.Person" />
                            </td>
                            <td>@Util.GetFullName(student.Person)</td>
                            <td>@student.Person.Age</td>
                            <td>@student.Person.EducationLevel.ToDisplayName()</td>
                            <td>@student.Person.ClassLevel.ToDisplayName()</td>
                            <td>
                                <span class="badge @(student.Person.IsActive ? "bg-success" : "bg-danger")">
                                    @(student.Person.IsActive ? "Active" : "Inactive")
                                </span>
                                <span class="badge @(Util.IsStudentEnrolled(student) ? "bg-success" : "bg-danger")">
                                    @(Util.IsStudentEnrolled(student) ? "Enrolled" : "Not Enrolled")
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/students/details/@student.Id" class="btn btn-info btn-sm">
                                        <i class="fa fa-eye"></i> View
                                    </a>
                                    <AuthorizeView Roles="Developer,Principal,Admin">
                                        <Authorized>
                                            <a href="/students/edit/@student.Id" class="btn btn-warning btn-sm">
                                                <i class="fa fa-pencil"></i> Edit
                                            </a>

                                            <a href="/students/account/@student.Id" class="btn btn-primary btn-sm">
                                                <i class="fa fa-user"></i> Account
                                            </a>

                                            <button class="btn btn-danger btn-sm" @onclick="() => DeleteStudent(student.Id)">
                                                <i class="fa fa-trash"></i> Delete
                                            </button>
                                        </Authorized>
                                    </AuthorizeView>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <ConfirmDeleteModal IsVisible="showDeleteConfirmation"
                        Title="Confirm Delete"
                        Message="Are you sure you want to delete this Student?"
                        OnConfirm="ConfirmDelete"
                        OnCancel="CancelDelete" />

    <GuardianSelectionModal IsVisible="showGuardianSelectionModal"
                            OnGuardianSelected="HandleGuardianSelected"
                            OnClose="CloseGuardianSelectionModal" />

</div>

@code {
    private IEnumerable<Student>? students;
    private int studentIdToDelete;
    private bool showDeleteConfirmation = false;
    private bool showGuardianSelectionModal = false;
    private List<Student> visibleStudents = new();
    private List<ClassLevel> availableClassLevelsForFilter = new();
    private string selectedEducationLevel = "";
    private string selectedClassLevel = "";
    private bool filtersApplied = false;

    protected override void OnInitialized()
    {
        students = SchoolDataService.GetStudents();

    }

    private void OnEducationLevelFilterChanged()
    {
        selectedClassLevel = "";

        if (!string.IsNullOrEmpty(selectedEducationLevel) &&
            Enum.TryParse<EducationLevel>(selectedEducationLevel, out var eduLevel))
        {
            availableClassLevelsForFilter = LogicMethods.GetAvailableClassLevels(eduLevel);
        }
        else
        {
            availableClassLevelsForFilter = new List<ClassLevel>();
        }

        FilterStudents();
        StateHasChanged();
    }

    private void FilterStudents()
    {
        filtersApplied = !string.IsNullOrEmpty(selectedEducationLevel) ||
                         !string.IsNullOrEmpty(selectedClassLevel);

        if (!filtersApplied)
        {
            visibleStudents = new List<Student>();
            return;
        }

        visibleStudents = students?.ToList() ?? new List<Student>();

        if (!string.IsNullOrEmpty(selectedEducationLevel) &&
            Enum.TryParse<EducationLevel>(selectedEducationLevel, out var eduLevel))
        {
            visibleStudents = visibleStudents
                .Where(s => s.Person.EducationLevel == eduLevel)
                .ToList();
        }

        if (!string.IsNullOrEmpty(selectedClassLevel) &&
            Enum.TryParse<ClassLevel>(selectedClassLevel, out var classLevel))
        {
            visibleStudents = visibleStudents
                .Where(s => s.Person.ClassLevel == classLevel)
                .ToList();
        }
    }

    private void ShowGuardianSelectionModal()
    {
        showGuardianSelectionModal = true;
    }

    private void CloseGuardianSelectionModal()
    {
        showGuardianSelectionModal = false;
    }

    private void HandleGuardianSelected(Guardian selectedGuardian)
    {
        NavigationManager.NavigateTo($"/students/create?guardianId={selectedGuardian.Id}");
    }


    private void DeleteStudent(int id)
    {
        studentIdToDelete = id;
        showDeleteConfirmation = true;
    }

    private void CancelDelete()
    {
        showDeleteConfirmation = false;
    }

    private async Task ConfirmDelete()
    {
        var result = await SchoolDataService.DeleteStudentAsync(studentIdToDelete);
        if (result)
        {
            students = SchoolDataService.GetStudents();
            FilterStudents();
            showDeleteConfirmation = false;
            StateHasChanged();
        }
    }
}