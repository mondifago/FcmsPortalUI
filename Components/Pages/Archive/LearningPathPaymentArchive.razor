@page "/archive/payments/learningpaths"
@using FcmsPortal.Models
@using FcmsPortal.Enums
@using FcmsPortalUI.Services
@using FcmsPortalUI.Components.Pages.Shared
@using System.Globalization
@inject ISchoolDataService SchoolDataService

<div class="container-fluid mt-3">

    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h3>Archived Learning Path Payment Summary</h3>
            <a href="/archive" class="btn btn-secondary">
                <i class="fa fa-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Filter Archived Learning Paths</h5>
        </div>

        <div class="card-body">
            <div class="row">

                <div class="col-md-6 mb-3">
                    <label class="form-label">Academic Year</label>
                    <select class="form-select"
                            @bind="selectedAcademicYear"
                            @bind:after="LoadArchivedPayments">

                        <option value="">-- Select Academic Year --</option>

                        @foreach (var year in academicYears)
                        {
                            <option value="@year">@year</option>
                        }
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Term</label>
                    <select class="form-select"
                            @bind="selectedSemester"
                            @bind:after="LoadArchivedPayments">

                        @foreach (var sem in Enum.GetValues(typeof(Semester)))
                        {
                            <option value="@sem">@sem</option>
                        }
                    </select>
                </div>

            </div>
        </div>
    </div>

    <!-- LIST CARD -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="mb-0">Learning Path Payment Details</h4>
        </div>

        <div class="card-body">
            @if (filteredPayments.Count == 0)
            {
                <p class="text-muted">No archived data found for the selected filters.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Learning Path</th>
                                <th>Students</th>
                                <th>School Fees</th>
                                <th>Expected Revenue</th>
                                <th>Total Paid</th>
                                <th>Balance</th>
                                <th>Payment Rate</th>
                                <th>Timely Rate</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var lp in filteredPayments)
                            {
                                <tr>
                                    <td>@lp.EducationLevel - @lp.ClassLevel</td>
                                    <td>@lp.TotalStudentsInPath</td>
                                    <td>@lp.FeePerStudent.ToString("C", new CultureInfo("en-NG"))</td>
                                    <td>@lp.LearningPathExpectedRevenue.ToString("C", new CultureInfo("en-NG"))</td>
                                    <td>@lp.TotalPaid.ToString("C", new CultureInfo("en-NG"))</td>
                                    <td>@lp.Outstanding.ToString("C", new CultureInfo("en-NG"))</td>
                                    <td>@lp.LearningPathPaymentCompletionRate.ToString("F2")%</td>
                                    <td>@lp.LearningPathTimelyCompletionRate.ToString("F2")%</td>

                                    <td>
                                        <button class="btn btn-sm btn-info"
                                                @onclick="() => ShowLearningPathReport(lp)">
                                            <i class="fa fa-file-alt"></i> Report
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

</div>


<LearningPathPaymentReportModal
    IsVisible="showReport"
    ArchiveEntry="selectedArchiveEntry"
    OnClose="CloseReport" />

@code {

    private List<string> academicYears = new();
    private string? selectedAcademicYear;

    private Semester selectedSemester = Semester.First;

    private List<ArchivedLearningPathPayment> archivedPayments = new();
    private List<ArchivedLearningPathPayment> filteredPayments = new();

    private bool showReport = false;
    private ArchivedLearningPathPayment? selectedArchiveEntry;

    protected override void OnInitialized()
    {
        academicYears = SchoolDataService.GetArchivedLearningPathAcademicYears();
    }

    private void LoadArchivedPayments()
    {
        if (string.IsNullOrEmpty(selectedAcademicYear))
        {
            filteredPayments = new();
            return;
        }

        archivedPayments = SchoolDataService.GetArchivedLearningPathPayments(
            selectedAcademicYear,
            selectedSemester
        );

        filteredPayments = archivedPayments;
        StateHasChanged();
    }

    private void ShowLearningPathReport(ArchivedLearningPathPayment entry)
    {
        selectedArchiveEntry = entry;
        showReport = true;
    }

    private void CloseReport()
    {
        showReport = false;
        selectedArchiveEntry = null;
    }
}

