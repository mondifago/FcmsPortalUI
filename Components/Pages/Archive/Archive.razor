@page "/archive"
@using FcmsPortal.Models
@using FcmsPortalUI.Services
@inject ISchoolDataService SchoolDataService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Archive Center</PageTitle>

<div class="container-fluid mt-3">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <h1><i class="fa fa-archive me-2"></i>Archive Center</h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fa fa-user-graduate me-2"></i>Student Archives
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">

                    </p>
                    <div class="d-flex flex-column gap-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>Graduated Students:</span>
                            <span class="badge bg-primary">@archivedStudentsCount</span>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-primary" @onclick="() => NavigateToStudentArchive()">
                        View Student Archives
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Payments Archive Section  -->

    <div class="row">
        <div class="mb-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fa fa-money-bill-wave me-2"></i>Student Payment Archives
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">

                    </p>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success" @onclick="() => NavigateToPaymentArchive()">
                        View Student Payments
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Attendance Archive Section -->
<div class="row">
    <div class="mb-4">
        <div class="card h-100">
            <div class="card-header bg-warning">
                <h5 class="mb-0">
                    <i class="fa fa-calendar-check me-2"></i>Student Attendance Archives
                </h5>
            </div>
            <div class="card-body">
                <p class="card-text">
                    
                </p>
            </div>
            <div class="card-footer">
                <button class="btn btn-warning" @onclick="() => NavigateToAttendanceArchive()">
                    View Attendance Archives
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Grades Archive Section -->
<div class="row">
    <div class="mb-4">
        <div class="card h-100">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="fa fa-graduation-cap me-2"></i>Student Grades Archives
                </h5>
            </div>
            <div class="card-body">
                <p class="card-text">
                    
                </p>
            </div>
            <div class="card-footer">
                <button class="btn btn-info text-white" @onclick="() => NavigateToGradesArchive()">
                    View Grades Archives
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private int archivedStudentsCount = 0;

    protected override void OnInitialized()
    {
        LoadArchiveStats();
    }

    private void LoadArchiveStats()
    {
        var archivedStudents = SchoolDataService.GetArchivedStudents();
        archivedStudentsCount = archivedStudents.Count;
    }

    private void NavigateToStudentArchive()
    {
        NavigationManager.NavigateTo("/archive/students");
    }

    private void NavigateToPaymentArchive()
    {
        NavigationManager.NavigateTo("/archive/payments");
    }

    private void NavigateToAttendanceArchive()
    {
        NavigationManager.NavigateTo("/archive/attendance");
    }

    private void NavigateToGradesArchive()
    {
        NavigationManager.NavigateTo("/archive/grades");
    }
}